import pygame

pygame.init

screen = pygame.display.set_mode((600, 700))

halfpill = pygame.image.load("imbitmap.png")

running = True

while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
            pygame.display.quit()
